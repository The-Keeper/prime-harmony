---
interface Props {
  title: string;
}

const DAYS_IN_QUARTER = 90;

const { title } = Astro.props;

const items = [...Array(DAYS_IN_QUARTER).keys()].map(i => {
    return {
        name: i+1
    }
})

---

<!-- dummy element for style loading -->
<div class="cols-5 cols-10 cols-6 cols-9"></div>

<h4>{title}</h4>

<div class={`grid calgrid`}>
  <!-- Your grid items here -->
  {items.map(item => (
    <div class="grid-item">{item.name}</div>
  ))}
</div>
